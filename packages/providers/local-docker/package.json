{
  "name": "@usbx/local-docker",
  "version": "0.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjiangcy/universal-sandbox.git",
    "directory": "packages/providers/local-docker"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --sourcemap --target es2022 --out-dir dist",
    "lint": "oxlint src",
    "format": "oxfmt --write src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run src --passWithNoTests",
    "test:e2e": "vitest run e2e"
  },
  "dependencies": {
    "@usbx/core": "workspace:*",
    "dockerode": "^4.0.9",
    "tar-fs": "^3.0.9"
  },
  "devDependencies": {
    "@types/dockerode": "^4.0.1",
    "@types/tar-fs": "^2.0.4"
  },
  "engines": {
    "node": ">=24.13.0 <25",
    "pnpm": ">=10.28.1 <11"
  }
}
