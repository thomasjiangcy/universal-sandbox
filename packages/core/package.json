{
  "name": "@usbx/core",
  "version": "0.1.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasjiangcy/universal-sandbox.git",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm --dts --sourcemap --target es2022 --out-dir dist",
    "lint": "oxlint src",
    "format": "oxfmt --write src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run src --passWithNoTests",
    "test:e2e": "vitest run e2e --passWithNoTests"
  },
  "engines": {
    "node": ">=24.13.0 <25",
    "pnpm": ">=10.28.1 <11"
  }
}
