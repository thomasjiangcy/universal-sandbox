{
  "name": "universal-sandbox",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "lint": "oxlint .",
    "format": "oxfmt --write .",
    "lint-staged": "lint-staged",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:providers": "node scripts/provider-e2e.mjs",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@types/node": "^25.0.9",
    "lefthook": "^2.0.15",
    "lint-staged": "^16.1.6",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "tsdown": "^0.20.0-beta.4",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md,yml,yaml}": "oxfmt --write"
  },
  "engines": {
    "node": ">=24.13.0 <25",
    "pnpm": ">=10.28.1 <11"
  },
  "packageManager": "pnpm@10.28.1"
}
